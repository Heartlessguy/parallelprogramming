{
    "tasks": [
        {
            "type": "shell",
            "label": "mpicc build active file",
            "command": "/usr/bin/mpicc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/../bin/${fileBasenameNoExtension}.mpi.bin",
                "-lm"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ],
    "version": "2.0.0"
}